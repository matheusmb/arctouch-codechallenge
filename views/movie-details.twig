{# movie-details.twig #}
{% extends 'template.twig' %}
{% block main %}
<div class="container">
    <div class="row justify-content-md-center album">
        <div class="col-md-8">
            <img class="img-fluid" src="{{ base_url }}/w780/{{ movie.backdrop_path }}">
            <h2>{{ movie.title }}</h2>
            <p>Status: {{ movie.status }}</p>
            <p>Release Date: {{ movie.release_date }}</p>
            <p>Genres:
            {% for genre in movie.genres %}
                {% if loop.last %}
                    {{ genre.name }}
                {% else %}
                    {{ genre.name }},
                {% endif %}
            {% endfor %}
            </p>
            <p>Vote average: {{ movie.vote_average }}</p>
            <p>Overview: {{ movie.overview }}</p>
        </div>
    </div>

</div>

{% endblock %}